page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.profile-info {
  background-image: linear-gradient(132deg, 
		#ff212e 0%, 
		#f0151b 50%, 
		#e00808 100%), 
	linear-gradient(
		#444444, 
		#444444);
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info {
  flex: 1;
  height: 85rpx;
  padding-left: 31.25rpx;
}

.profile-info .name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}
.vip-area {
  width: 238rpx;
	height: 48rpx;
	background-image: linear-gradient(132deg, 
		#ffd200 0%, 
		#ff8e00 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.vip-area .vip-tit {
  color: #e00808;
  font-size: 23rpx;
}
.vip-area image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
}
.vip-area .vip-discript {
  color: #e00808;
  font-size: 23rpx;
}
.up-user .up-t{
  color: #fff;
  font-size: 28rpx;
}
.up-user .up-n{
  color: #fcfcfc;
  font-size: 24rpx;
  margin-left: 30rpx;
}
.up-user .up-m{
  color: #fcfcfc;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.user_area {
  /* border: 1px solid black; */
  /* margin: 0 auto; */
  margin: 40rpx 21rpx 21rpx 21rpx;
  background: #fff;
  border-radius: 8rpx;
  /* border-top: 1px solid #f4f4f4; */
}

.user_row {
  /* border: 1px solid black; */
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #fafafa;
}

.user_row_left {
  margin-left: 29rpx;
}
.user_row_left text{
  font-size: 32rpx;
	color: #333333;
}

.user_row_right {
  margin-right: 30rpx;
}
.user_row_right text{
  font-size: 23rpx;
  color: #666666;
}
.user_row_right image{
  width: 10rpx;
  height: 20rpx;
  margin-left: 21rpx;
}

.user_column {
  /* border: 1px solid black; */
  /* height: 140rpx; */
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.user_column_item {
  width: 25%;
  height: 140rpx;
  background: #fff;
  text-align: center;
  position: relative;
}
.user_column_item_badge {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  background: #b4282d;
  color: #fff;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.user_column_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.user_column_item_text {
  /* border: 1px solid black; */
  font-size: 23rpx;
  color: #666666;
}

.user_column_item_phone {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: transparent;
  padding: 0;
}
.user_column_item_phone::after{
  border: solid 1px transparent;
}
.logout {
  margin-top: 30rpx;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  color: red;
  font-size: 30rpx;
}
/* 邀请弹框 */
.attr-pop-box {
  position: fixed;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8;
  /* bottom: 0; */
  /* display: none; */
}

.attr-pop {
  width: 80%;
  height: 60%;
  max-height: 780rpx;
  padding: 31.25rpx;
  background: #fff;
  position: fixed;
  z-index: 9;
  top: 25%;
  left: 10%;
  /* bottom: 100rpx; */
}

.attr-pop .close {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 31.25rpx;
  overflow: hidden;
  top: 31.25rpx;
}

.attr-pop .close .icon {
  width: 48rpx;
  height: 48rpx;
}

.attr-pop .img-info {
  /* width: 687.5rpx;
  height: 177rpx; */
  overflow: hidden;
  margin-bottom: 41.5rpx;
  margin-top: 48rpx;
}

.attr-pop .img {
  float: left;
  height: 550rpx;
  width: 550rpx;
  background: #f4f4f4;
  margin-right: 31.25rpx;
}